<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_photo_viewer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="es.esy.vivekrajendran.news.PhotoViewerActivity" >

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_photoviewer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_photoviewer"
        android:layout_width="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:textStyle="bold"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btn_activity_photo_close"
        android:layout_margin="16dp"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/ic_clear_black_24px"/>
</RelativeLayout>
